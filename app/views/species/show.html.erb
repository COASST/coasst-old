<% end %>
<% if params[:entangled] == "1" %>
 - entangled birds
<% end %>

(<%=@surveys.length %> total) </h3>

<table class="sortable-onload-2">
  <tr>
    <th class="sortable"><%=h('Beach') %></th>
    <th class="sortable"><%=h('Survey date') %></th>
    <th class="sortable"><%=h('Number found') %></th>
  </tr>

  <% for s in @surveys %>
    <tr>
      <td><%= s.beach_name %><%#= link_to s.beach_name, :controller=>:beach, :action=>:show, :id=>s.beach_id %></td>
      <td><%= s.survey_date %><%#= link_to s.survey_date, :controller=>:survey, :action=>:show, :id=>s.id %></td>
        <td><%= h s.cnt %></td>
    </tr>
  <% end %>
</table>
