<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title>COASST Index</title>
  <meta http-equiv='content-type' content='text/html;charset=utf-8' />
  <%= javascript_include_tag 'prototype' %>
  <%= javascript_include_tag "effects" %>
  <%# javascript_include_tag "controls" %>
  <%= javascript_include_tag 'tablesort_v2' %>
  <%= calendar_date_select_includes %>
  <%= stylesheet_link_tag "habitual", :media => "all" %>
</head>
<body id="admin">
  <div id="logo">
    <%= image_tag("logo.gif") %>
  </div>

  <div id="container">
    <h1 id="header"><%= @page_title || "" %></h1>
    <div id="sidebar">
      <ul id="nav">
        <li>
          <%= link_to "Login", :controller => :data, :action => 'index' %>
        </li>
        <li>
          <%= link_to "Search data", :controller => :search %>
        </li>
        <li>
          <%= link_to "Reports", :controller => :reports %>
        </li>
        <li>
          <%= link_to "List volunteers", :controller => :volunteer, :action => 'list' %>
        </li>
        <li>
          <%= link_to "Register", :controller => :volunteer, :action => 'register_volunteer' %>
        </li>

      </ul>
    </div>
    <div id="main">
    <% if flash[:notice] -%>
      <div id="notice"><%= flash[:notice] %></div>
    <% end -%>

      <%= yield :layout %>
    </div>
  </div>
</body>
</html>

