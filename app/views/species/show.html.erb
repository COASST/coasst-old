<h1 class="snug"><%= @species.name %></h1>
<span class="small">Code: <%= @species.code %></span><br />
2000 <%= image_tag graphs_url(:action => 'species', :id => @species.id), :width => 246, :height => 25, :alt => "graph of #{@species.name} finds" %> 2007

<p>
  <% if not @species.foot_type_family.nil? %>
    <b>Foot Type: </b> <%= @species.foot_type_family.name   %> <br />
  <% end %>
  <% if not @species.group.nil? %>
    <b>Group: </b> <%= @species.group.name %> <br />
  <% end %>
  <% if not @species.subgroup.nil? %>
    <b>Subgroup: </b> <%= @species.subgroup.name %> <br />
  <% end %>
  <br />
  <b>Measurements:</b>

  <table>
    <%= render :partial => 'measurements' %>
  </table>
</p>
<p>
  <% if !@species.concerns.blank? %>
    <b><%= @species.name %> is a species of concern:</b>
    <ul class="snug">
      <% for c in @species.concerns %>
        <li><%= h c.name %></li>
      <% end %>
    </ul>
    <br />
  <% end %>

  <% if !@species.active? %>
    <i>species not currently monitored</i>
  <% end %>
</p>

<%#@sql%>
<h3> Surveys
<% if not @year.nil? %>
  in <%=@year%>
<% end %>
<% if params[:oiled] == "1" %>
