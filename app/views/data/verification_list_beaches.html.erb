<h1><%=h("Verification: #{@region.name}") %></h1>


<div style="padding-bottom: 45px;">
<% button_div do %>
  <%= button_elem(:go_back, "Go Back to Regions", "/data/") %>
<% end %>
</div>

<table class="sortable ruled">
  <tr>
    <th class="sortable"><%= h('Beach') %></th>
    <th class="sortable"><%= h('Unreviewed') %></th>
  </tr>

  <% for b in @beaches %>
    <tr>
      <td><%=link_to b.name, :action => :verification_beach, :id => b.id %></td>
      <td class="sidepad right"><%= @unreviewed[b.id] %></td>
    </tr>
  <% end %>
</table>

<% button_div do %>
  <%= button_elem(:go_back, "Go Back to Regions", "/data/") %>
<% end %>

<%= debug_block %>
